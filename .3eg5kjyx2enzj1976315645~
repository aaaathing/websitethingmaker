			let alertId = 0, alerts = {}
			function alert(html){
				return new Promise(resolve => {
					let id = alertId++
					html = html.replace(/\{CLOSEALERT:*(.*)\}/g,"alerts["+id+"](&quot;$1&quot;)")
					let el = document.createElement("div")
					el.className = "modal"
					el.innerHTML = html
					el.id = "alert"+id
					let button = document.createElement("button")
					button.innerHTML = "OK"
					alerts[id] = value => {
						el.style.animation = "disappear 0.3s cubic-bezier(0, 0, 1, 0.5)"
						delete alerts[id]
						setTimeout(() => el.remove(), 300)
						resolve({el,value})
					}
					button.onclick = () => alerts[id]('ok')
					el.appendChild(button)
					document.body.appendChild(el)
					el.style.animation = "appear 0.3s cubic-bezier(0, 0, 0, 1)"
				})
			}
			async function prompt(html, text = ""){
				let {el} = await alert(html+"<input type='text' value='"+text.replace(/'/g,"\\'")+"'>")
				return el.querySelector("input").value
			}
			async function confirm(html){
				let {value} = await alert(html+"<button onclick='{CLOSEALERT:cancel}' style='bottom:calc(10px + 2em + 30px);'>Cancel</button>")
				return value !== "cancel"
			}
