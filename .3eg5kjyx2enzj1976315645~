		<script id="workerCode" type="text/js-worker">
			let pointerX, pointerY, pointerZ, moveX, moveY, moveZ, mouseDown, tool, dt, masterSpeed, drag, gravity, pause, borderEnabled
			class Particle{
				constructor(x,y,z,type,id,color,owned){
					this.x = x
					this.y = y
					this.z = z
					this.type = types[type]
					this.size = 5
					this.id = id
					if(owned){
						this.velx = 0
						this.vely = 0
						this.velz = 0
						this.canDespawn = false
						this.color = [color[0]/255,color[1]/255,color[2]/255,color[3]/255]
					}
				}
				updateColor(color){
					this.color[0] = color[0]/255
					this.color[1] = color[1]/255
					this.color[2] = color[2]/255
					this.color[3] = color[3]/255
				}
				preupdate(){
					let x = 0, y = -gravity, z = 0
					for(let i of particles){
						let dx = i.x-this.x, dy = i.y-this.y, dz = i.z-this.z
						let d = Math.sqrt(dx*dx+dy*dy+dz*dz)
						if(!d) continue
						let direction = i.type.attracts[this.type.name]
						if(!direction) continue
						direction *= this.type.speed
						let speed = direction/d/d
						if(d-direction < this.type.minDist+i.type.minDist) speed -= ((this.type.minDist+i.type.minDist)-(d-direction))/d
						x += dx*speed
						y += dy*speed
						z += dz*speed
					}
					this.velx += x*dt*masterSpeed, this.vely += y*dt*masterSpeed, this.velz += z*dt*masterSpeed
				}
				update(){
					if(mouseDown){
						let dx = this.x-pointerX, dy = this.y-pointerY, dz = this.z-pointerZ
						if((dx*dx+dy*dy+dz*dz) < 50*50){
							if(tool === "erase") this.canDespawn = true
							else if(tool === "move") this.x += moveX, this.y += moveY, this.z += moveZ
						}
					}
					if(pause) return
					this.x += this.velx*dt*masterSpeed
					this.y += this.vely*dt*masterSpeed
					this.z += this.velz*dt*masterSpeed
					this.vely += (this.vely * drag - this.vely) * dt*masterSpeed
					this.velx += (this.velx * drag - this.velx) * dt*masterSpeed
					this.velz += (this.velz * drag - this.velz) * dt*masterSpeed
					if(borderEnabled){
						if(this.x > 1000) this.x = 1000
						if(this.x < -1000) this.x = -1000
						if(this.y > 1000) this.y = 1000
						if(this.y < -1000) this.y = -1000
						if(this.z > 1000) this.z = 1000
						if(this.z < -1000) this.z = -1000
					}
				}
			}
			let types = {}, ownedParticles = [], particles = []
			let channel = new BroadcastChannel("CHANNEL_NAME")
			let thisId
			let particleArray = [], deleteParticleArray = []
			function error(err){
				self.onmessage = channel.onmessage = null
				self.postMessage({alert:"Error: "+err})
				throw new Error(err)
			}
			self.onmessage = channel.onmessage = function(e) {
				let {data} = e
				if(data.setId){
					thisId = data.data
					self.postMessage({idSet:true})
				}else if(data.addType) types[data.data.name] = data.data
				else if(data.editType) Object.assign(types[data.data.name], data.data)
				else if(data.deleteType){
					delete types[data.name]
					for(let i=0; i<ownedParticles.length; i++){
						if(ownedParticles[i].type.name === data.name){
							ownedParticles.splice(i,1)
							i--
						}
					}
					for(let i=0; i<particles.length; i++){
						if(particles[i].type.name === data.name){
							particles.splice(i,1)
							i--
						}
					}
				}else if(data.setTypes){
					types = data.data
					particles.length = ownedParticles.length = 0
				}else if(data.clearParticles){
					particles.length = ownedParticles.length = 0
				}else if(data.addParticle){
					let p = new Particle(...data.data, data.owner === thisId)
					particles.push(p)
					if(data.owner === thisId) ownedParticles.push(p)
				}else if(data.deleteParticle){
					let idx = particles.findIndex(p => p.id === data.id)
					if(idx === -1) return error("Failed to find particle "+p.id+" while deleting.")
					particles.splice(idx,1)
				}else if(data.updateColor){
					for(let p of ownedParticles){
						if(p.name === data.type) p.updateColor(data.data)
					}
				}else if(data.updateParticles){
					({pointerX, pointerY, pointerZ, moveX, moveY, moveZ, mouseDown, tool, dt, masterSpeed, drag, gravity, pause, borderEnabled} = data)
					let tickStart = performance.now()
					if(!pause){
						for(let p of ownedParticles) p.preupdate()
					}
					deleteParticleArray.length = 0
					let particleArrayI = 0, deleteParticleI = 0
					for(let i=0; i<ownedParticles.length; i++){
						let p = ownedParticles[i]
						p.update()
						particleArray[particleArrayI] = p.x
						particleArray[particleArrayI+1] = p.y
						particleArray[particleArrayI+2] = p.z
						particleArray[particleArrayI+3] = p.size
						particleArray[particleArrayI+4] = p.color[0]
						particleArray[particleArrayI+5] = p.color[1]
						particleArray[particleArrayI+6] = p.color[2]
						particleArray[particleArrayI+7] = p.color[3]
						particleArray[particleArrayI+8] = p.id
						particleArrayI += 9
						if(p.canDespawn){
							ownedParticles.splice(i,1)
							i--
							let idx = particles.findIndex(p2 => p2 === p)
							if(idx === -1) return error("Failed to find particle "+p.id+" while deleting.")
							particles.splice(idx,1)
							deleteParticleArray[deleteParticleI++] = p.id
						}
					}
					if(particleArray.length > particleArrayI) particleArray.length = particleArrayI
					if(deleteParticleArray.length > deleteParticleI) deleteParticleArray.length = deleteParticleI
					channel.postMessage({finishUpdateParticles:true,workerId:thisId,time:performance.now()-tickStart})
				}else if(data.sendParticles){
					channel.postMessage({particlesUpdated:true,workerId:thisId,data:particleArray,delete:deleteParticleArray})
				}else if(data.particlesUpdated){
					if(data.data.length){
						let idx = particles.findIndex(p => p.id === data.data[8])
						let deli = 0
						for(let i=0; i<data.data.length; i+=9){
							let id = data.data[i+8]
							while(idx < particles.length && particles[idx].id !== id) idx++
							let p = particles[idx]
							if(!p || p.id !== id){
								return error("Incorrect particle id, particles sent in particlesUpdated must be in order of adding. ID order: "+data.data.filter((v,i) => (i%9)===8).join(", "))
							}
							if(data.delete[deli] === id){
								deli++
								particles.splice(idx,1)
								continue
							}
							p.x = data.data[i]
							p.y = data.data[i+1]
							p.z = data.data[i+2]
							idx++
						}
						if(deli !== data.delete.length){
							return error("Incorrect delete particle id, particles sent in particlesUpdated must be in order of adding.")
						}
					}
					self.postMessage({particleUpdateDone:true})
				}else if(data.checkOverlap){
					let overlapped = false
					for(let i of ownedParticles){
						let dx = i.x-pointerX, dy = i.y-pointerY, dz = i.z-pointerZ
						if(dx*dx+dy*dy+dz*dz < 10*10){
							overlapped = true
							break
						}
					}
					self.postMessage({overlapChecked:true,data:overlapped})
				}
			}
			self.postMessage({workerStarted:true})
		</script>
		<script>
			let glCanvas = document.querySelector("#glCanvas"), gl = D.getContext(glCanvas,"webgl2")
			let uiCanvas = document.querySelector("#uiCanvas"), ctx = uiCanvas.getContext("2d")
			let controls = document.querySelector("#controls")
			D.enable3D()
			D.enableBlend()
			let width, height, aspect
			let proj, mat = mat4.identity(new Float32Array(16))
			let fov = 70
			onresize = function(){
				glCanvas.width = uiCanvas.width = width = Math.round(innerWidth*(controls.classList.contains("hidden") ? 1 : 0.7))
				glCanvas.height = uiCanvas.height = height = innerHeight
				aspect = width/height
				proj = D.prespectiveMatrix(fov,aspect,0.1,1000000)
				D.viewport(0,0,width,height)
			}
			let extraInfo = document.querySelector("#extraInfo")

			const channelName = "particleLife"+Date.now()
			let channel = new BroadcastChannel(channelName)
			const workerURL = window.URL.createObjectURL(new Blob([document.querySelector("#workerCode").text.replace("CHANNEL_NAME",channelName)], { type: "text/javascript" }))
			const workerCount = (navigator.hardwareConcurrency || 1) - 1 || 1
			extraInfo.append("Your computer seems to have "+navigator.hardwareConcurrency+" proccessors.\n","Using "+workerCount+" workers.\n")
			let workers = []
			let workersStarted = 0
			function createWorker(id){
				let worker = new Worker(workerURL)
				worker.onmessage = e => {
					if(e.data.workerStarted){
						worker.postMessage({setId:true,data:id})
					}else if(e.data.idSet){
						workersStarted++
						if(workersStarted === workerCount){
							for(let w of workers) w.onmessage = channelOnmessage
							init()
						}
					}else{
						alert("Bad message, check console")
						console.error("Bad message",e.data)
					}
				}
				workers[id] = worker
			}
			for(let i=0; i<workerCount; i++){
				createWorker(i)
			}

			let types = {}
			function hide(){
				document.querySelector("#show").classList.remove('hidden')
				controls.classList.add('hidden')
				onresize()
			}
			function show(){
				document.querySelector("#show").classList.add('hidden')
				controls.classList.remove('hidden')
				onresize()
			}
			let list = document.querySelector("#p"), stats = document.querySelector("#stats"), moreStats = document.querySelector("#moreStats")
			let selected = null
			function updateList(){
				let html = ""
				for(let i in types){
					var c = types[i].color.substring(1);      // strip #
					var rgb = parseInt(c, 16);   // convert rrggbb to decimal
					var r = (rgb >> 16) & 0xff;  // extract red
					var g = (rgb >>  8) & 0xff;  // extract green
					var b = (rgb >>  0) & 0xff;  // extract blue
					var luma = 0.2126 * r + 0.7152 * g + 0.0722 * b; // per ITU-R BT.709
					html += `
<div class='circle${selected === types[i] ? " selected" : ""}' style='background:${types[i].color};' id="particle_${types[i].name}" onclick="editParticle(this.id)"><div style="color:${luma<128?"white":"black"};">${types[i].name}</div></div>
`
				}
				list.innerHTML = html
			}
			let editP = document.querySelector("#editP"), pAttract = document.querySelector("#pAttract"), pInfo = document.querySelector("#pInfo")
			let speed = document.querySelector("#speed"), minDist = document.querySelector("#minDist")
			let color = document.querySelector("#color")
			function editParticle(id){
				id = id.replace("particle_","")
				let particle = types[id]
				selected = particle
				document.querySelector("#editWhat").innerHTML = "Edit "+particle.name
				pInfo.innerHTML = ``
				color.value = selected.color
				updateAttract()
				minDist.value = particle.minDist
				speed.value = particle.speed
				editP.classList.remove('hidden')
				updateList()
			}
			function editParticleProp(name,value){
				selected[name] = value
				sendWorkers({editType:true,data:selected})
			}
			async function addParticle(){
				let name = await prompt("Name")
				if(!name) return
				name = sanitize(name)
				types[name] = {
					name,
					color:"#000000",
					attracts:{},
					minDist:5,
					speed:0.1
				}
				updateList()
				sendWorkers({addType:true,data:types[name]})
			}
			function randomParticles(){
				types = {}
				let beginnings = "BCDFGHJKLMNPQRSTVWXYZ"
				let consonants = "bcdfghjklmnpqrstvwxyz".split(""), vowels = "aeiou".split("")
				consonants.push("ck","sk","ts","st")
				vowels.push("ea",'ee','ei','eu','ou','ar','er','ir','or','ur','al','el','il','ol','ul')
				let endings = consonants.slice()
				endings.push('cks','sks','y','cky','sky')
				let typesArr = []
				for(let i=0; i<10; i++){
					let name = "", l = Math.round(Math.random()*5+1)
					name += beginnings[Math.floor(Math.random()*beginnings.length)]
					for(let j=0; j<l; j++){
						if(j%2) name += consonants[Math.floor(Math.random()*consonants.length)]
						else name += vowels[Math.floor(Math.random()*vowels.length)]
					}
					if(l%2) name += endings[Math.floor(Math.random()*endings.length)]
					if(types[name]) return
					types[name] = {
						name,
						color:'#'+(Math.random() * 0xFFFFFF << 0).toString(16).padStart(6, '0'),
						attracts:{},
						minDist:Math.random()*10+5,
						speed:1/(Math.random()*4+1)
					}
					typesArr.push(name)
				}
				for(let i in types){
					for(let j of typesArr){
						types[i].attracts[j] = Math.random()*2-1
					}
				}
				selected = null
				editP.classList.add('hidden')
				updateList()
				sendWorkers({setTypes:true,data:types})
			}
			function removeParticle(){
				delete types[selected.name]
				let {name} = selected
				selected = null
				editP.classList.add('hidden')
				updateList()
				sendWorkers({deleteType:true,name})
			}
			function editColor(c){
				selected.color = c
				sendWorkers({updateColor:true,type:selected.name,data:getColor(selected.color)})
				updateList()
			}
			function updateAttract(){
				let attractHTML = ""
				for(let i in selected.attracts){
					attractHTML += `${i}: ${selected.attracts[i]}<br>`
				}
				pAttract.innerHTML = attractHTML
			}
			function editAttract(){
				let attractHTML = `
<span style="float:right;cursor:pointer;" onclick="updateAttract();event.stopPropagation()">&times;</span>
<button onclick="addAttract();event.stopPropagation()">Add</button><br>
`
				for(let i in selected.attracts){
					attractHTML += `${i}: <input onclick="event.stopPropagation()" onchange="editAttractProp('${i}',parseFloat(this.value))" type="number" step="any" value="${selected.attracts[i]}"><button onclick="removeAttract('${i}');event.stopPropagation()">Delete</button><br>`
				}
				pAttract.innerHTML = attractHTML
			}
			function editAttractProp(name,value){
				selected.attracts[name] = value
