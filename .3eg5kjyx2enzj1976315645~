			let workersFinished = 0, totalParticles = 0, workersDone = 0
			let renderData = []
			function channelOnmessage(e){
				let {data} = e
				if(data.finishUpdateParticles){//workers update own particles
					workersFinished++
					if(moreStatsVisible) analytics.workerTickTime[data.workerId] += data.time
					if(workersFinished === workerCount){
						workersFinished = 0
						sendWorkers({sendParticles:true})
					}
				}else if(data.particlesUpdated){//worker sends updated particles
					for(let i=0; i<data.data.length; i+=9){
						renderData[0] = data.data[i]
						renderData[1] = data.data[i+1]
						renderData[2] = data.data[i+2]
						renderData[3] = data.data[i+3]
						renderData[4] = data.data[i+4]
						renderData[5] = data.data[i+5]
						renderData[6] = data.data[i+6]
						renderData[7] = data.data[i+7]
						D.addInstance(particle,renderData)
					}
					totalParticles += data.data.length/9
					workers[data.workerId].ownedParticles = data.data.length/9
				}else if(data.particleUpdateDone){//worker recieves updated particles
					workersDone++
					if(workersDone === workerCount*(workerCount-1)){
						workersDone = 0
						workersOnFinishUpdate()
						totalParticles = 0
					}
				}else if(data.overlapChecked){
					overlapCheckAmount++
					if(data.data) overlapped = true
					if(overlapCheckAmount === workerCount){
						overlapCheckAmount = 0
						workersOnFinishCheckOverlap()
					}
				}else if(data.alert) alert(data.alert)
			}
			channel.onmessage = channelOnmessage
			function sendWorkers(data){//send to all
				channel.postMessage(data)
			}
			let curParticleId = 0
			function newParticle(x,y,z,type){
				let min = Infinity, minId
				for(let i=0; i<workers.length; i++){
					let w = workers[i]
					if(w.ownedParticles < min){
						min = w.ownedParticles
						minId = i
					}
				}
				workers[minId].ownedParticles++
				sendWorkers({
					addParticle:true,
					data:[x,y,z,type, curParticleId++, getColor(types[type].color)],
					owner:minId
				})
			}
